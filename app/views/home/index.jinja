{% extends "base/base.jinja" %}
{% block content %}
<div class="container mx-auto p-4 max-w-4xl">
    <h1 class="text-3xl font-bold mb-6 text-center">Writing Style Correction and Analyzer</h1>
    
    <form hx-post="/" 
          hx-target="#results" 
          hx-swap="innerHTML"
          class="mb-8">
        <div class="mb-4">
            <label for="user_text" class="block text-gray-700 mb-2">
                Enter your text to correct:
            </label>
            <textarea name="user_text" id="user_text" rows="6"
                class="w-full px-3 py-2 border rounded-md"
                required></textarea>
        </div>
        <button type="submit" 
                class="px-4 py-2 bg-blue-600 text-white rounded-md"
                hx-indicator=".loading">
            Correct Grammar
        </button>
        <span class="loading htmx-indicator ml-2">
            Processing...
        </span>
    </form>
    
    <div id="results">
        {# This is where our results will appear #}
    </div>
</div>

<script src="https://unpkg.com/htmx.org@1.9.6"></script>
{% endblock %}